         <div class="col-md-4" style="text-align:center; border-radius:10px; background: rgba(240, 240, 240, 0.5);"><h5 style="color:white;"> by <%= @rss_author %></h5></div>
         <div class="col-md-4"></div>
      </div>






<% end %>
