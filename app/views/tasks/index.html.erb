<%= render "navbar" %>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Task</th>
      <th>Description</th>
      <th>Project</th>
      <th>Links<th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @tasks.each do |task| %>

      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.projectname %></td>

        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>

  </tbody>
</table>

